            android:textStyle="bold"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="288dp"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/prix_u"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Prix Unitaire"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="288dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/prix_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Prix total"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="288dp" />

        <ImageView
            android:id="@+id/btn_valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/comfir"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="573dp"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:id="@+id/btn_impr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/print"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="68dp"
            tools:layout_editor_absoluteY="646dp" />


