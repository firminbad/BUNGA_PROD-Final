<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/farine_de_mais"
    tools:context=".Prix_unitaire">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:background="@drawable/rectangle_1"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bungaprod"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="32dp"

        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIX UNITAIRE"
        android:textColor="@color/black"
        android:textSize="39dp"
        android:layout_below="@id/imageView4"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="98dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRIX 25000FC"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/tv"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="207dp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/btn_modifP"
        android:layout_width="280dp"
        android:layout_height="73dp"
        app:srcCompat="@drawable/modifier"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="285dp" />
        <Button
            android:id="@+id/bnt_return1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Retour"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>